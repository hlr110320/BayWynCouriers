<Window x:Class="BayWynCouriersWPF.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"     
        Title="Login" Height="308" Width="445" FontSize="14" Background="SlateGray">
    <Border Background="DarkSlateGray" CornerRadius="20" Margin="20">
        <StackPanel Margin="20">
            <Label Content="Login" Foreground="White" FontSize="30" HorizontalAlignment="Center" FontFamily="Microsoft Sans Serif"/>
            <Separator></Separator>
            <Label Content="Username" Foreground="White"/>
            <TextBox Name="txtUsername" Background="Gray" Foreground ="HotPink" FontSize="18"/>
            <Label Content="Password" Foreground="White"/>
            <PasswordBox Name="txtPassword" Background="Gray" Foreground ="White" FontSize="18"/>
            <Button Name ="btnLogin" Content="Submit" Margin="60 10" Background="Gray" Foreground ="White" FontSize="18" BorderThickness="0,0,0,0" FontFamily="Microsoft Sans Serif" Height="38" Width="157">
            </Button>
        </StackPanel>
    </Border>
</Window>