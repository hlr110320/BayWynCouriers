<Window x:Class="BayWynCouriersWPF.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"     
        Title="Login" Height="308" Width="445" FontSize="14" Background="DimGray">
    <Border Margin="10" Background="#FF468B9E">
        <StackPanel Margin="20">
            <Label Content="Login" Foreground="White" FontSize="30" HorizontalAlignment="Center" FontFamily="Microsoft Sans Serif"/>
            <Separator></Separator>
            <Label Content="Username" Foreground="White"/>
            <TextBox Name="txtUsername" Foreground = "Black" FontSize="18" TabIndex="1"/>
            <Label Content="Password" Foreground="White"/>
            <PasswordBox Name="txtPassword" Foreground ="White" FontSize="18" TabIndex="2" KeyDown="txtPassword_KeyDown"/>
            <Button Name ="btnLogin" Click="BtnSubmit_Click"  Content="Submit" Margin="60 10" Background="#FFC4BE9E" Foreground ="White" FontSize="18" BorderThickness="0,0,0,0" FontFamily="Microsoft Sans Serif" Height="38" Width="157" TabIndex="3">
            </Button>
        </StackPanel>
    </Border>
</Window>